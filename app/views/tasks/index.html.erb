<div class="container">
  <h1 class="mb-4">Tasks list</h1>

  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <%= link_to "Delete task",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>

  <div class="mt-5">
    <%= link_to "Create a new task", new_task_path %>
  </div>
</div>
